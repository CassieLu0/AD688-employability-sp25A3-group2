    {
      "cell_type": "code",
      "metadata": {},
      "source": [
        "df = pd.read_csv(\"lightcast_job_postings.csv\")\n",
        "\n",
        "# Display dataset summary\n",
        "\n",
        "df.info()\n",
        "df.describe()"
